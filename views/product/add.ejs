<!DOCTYPE html>
<html>
  <head>
    <title>Product</title>
    <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
    <%- include('../header') %>
    <script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
  </head>
  <body>
    <%- include('../nav') %>
    <div class="container">
      <p>Add Product</p>
      <% if(locals.errors){ %>
      <ul class="alert alert-danger">
        <% Object.values(errors).forEach((error)=>{ %>
        <li><%= error.msg %></li>
        <% }) %>
      </ul>
      <% } %>
      <%- messages() %>
      <form action="/products/add" method="post">
        <div class="form-group">
          <label for="exampleInputProduct">ชื่อสินค้า</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputProduct"
            name="product"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputDesc">รายละเอียด</label>
          <textarea
            class="form-control"
            id="exampleInputDesc"
            name="desc"
          ></textarea>
        </div>
        <script>
          CKEDITOR.replace("desc");
        </script>
        <div class="form-group">
          <label for="exampleInputPrice">ราคา</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputPrice"
            name="price"
          />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </body>
</html>
